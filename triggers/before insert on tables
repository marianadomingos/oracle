CREATE OR REPLACE TRIGGER TR_BI_CLIENTES
BEFORE INSERT ON CLIENTES
FOR EACH ROW
BEGIN
 :NEW.ID_CLIENTE := SEQ_CLIENTES.NEXTVAL;
END;

CREATE OR REPLACE TRIGGER TR_BI_PRODUTOS
BEFORE INSERT ON PRODUTOS
FOR EACH ROW
BEGIN
 :NEW.ID_PRODUTO := SEQ_PRODUTOS.NEXTVAL;
END;

CREATE OR REPLACE TRIGGER TR_BI_VENDAS
BEFORE INSERT ON VENDAS
FOR EACH ROW
BEGIN
  :NEW.ID_VENDA := SEQ_VENDAS.NEXTVAL;
END;